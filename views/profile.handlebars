<div>
    <h2>Welcome {{name}}!</h2>

    <h3>Create a new blog-post:</h3>
    <form class="new-blog-form">
        <div class="form-group">
            <label for="blog-title">Blog Title:</label>
            <input class="form-input" type="text" id="blog-title" name="blog-title">
        </div>
        <div class="form-group">
            <label for="blog-content">Blog Content:</label>
            <input class="form-input" type="text" id="blog-content" name="blog-content">
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
    {{#if blogs.length}}
    <div class="blog-list">
    <h3>Previous Submitted Posts</h3>
    {{#each blogs as |blog|}}
    <div>
        <h4>
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h4>
        <div>
            <button class="delete-btn" data-id="{{blog.id}}">DELETE</button>
        </div>
    </div>
    {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>